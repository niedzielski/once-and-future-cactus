{
  "name": "once-and-future-cactus",
  "version": "0.1.0",
  "homepage": "https://github.com/rndmem/once-and-future-cactus",
  "repository": "github:rndmem/once-and-future-cactus",
  "bugs": "https://github.com/rndmem/once-and-future-cactus/issues",
  "main": "src",
  "scripts": {
    "test": "npm run -s eslint",
    "eslint": "rndlint .",
    "dist": "mkdir -p dist && cp -f src/index-prod.htm dist/index.htm && jspm bundle-sfx --minify src/index dist/index.js",
    "rel": "rm -rf dist && npm run -s dist && mv dist \"rel/$(jq -r .version package.json)+$(date +%Y%m%d%H%M%S)-$(git rev-parse --short HEAD)\"",
    "update": "ncu -atu && jspm update",
    "postinstall": "jspm i",
    "preversion": "npm run -s test",
    "postversion": "git push origin master --follow-tags && npm publish",
    "clean": "rm -rf node_modules jspm_packages .eslintcache"
  },
  "engines": {
    "node": "6.5.0"
  },
  "devDependencies": {
    "eslint": "3.5.0",
    "eslint-config-rndmem": "0.2.1",
    "eslint-plugin-jsdoc": "2.3.1",
    "eslint-plugin-json": "1.2.0",
    "eslint-plugin-node": "2.0.0",
    "eslint-plugin-promise": "2.0.1",
    "jspm": "0.16.45",
    "live-server": "1.1.0",
    "npm-check-updates": "2.8.0",
    "pre-commit": "1.1.3"
  },
  "jspm": {
    "dependencies": {
      "phaser": "npm:phaser@2.6.2"
    },
    "devDependencies": {
      "babel": "npm:babel-core@5.8.24",
      "babel-runtime": "npm:babel-runtime@5.8.24",
      "core-js": "npm:core-js@1.1.4"
    }
  },
  "precommit.silent": true,
  "license": "GPL-3.0"
}
